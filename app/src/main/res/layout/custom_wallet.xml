<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/ll_credit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible">

        <TextView
            android:id="@+id/textView9"
            style="@style/semibold_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Order Id:8"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintBottom_toTopOf="@+id/cv_img"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_img"
            android:layout_width="@dimen/_70sdp"
            android:layout_height="@dimen/_70sdp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/_2sdp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_date">

            <ImageView
                android:id="@+id/circleImageView2"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder"
                android:visibility="gone" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/textView10"
            style="@style/semibold_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView9"
            android:text="Deepak Rana"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/cv_img"
            app:layout_constraintTop_toBottomOf="@+id/tv_date" />

        <TextView
            android:id="@+id/textView11"
            style="@style/medium_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:layout_below="@+id/textView10"
            android:maxLines="2"
            android:layout_marginEnd="@dimen/_5sdp"
            android:text="Mohali statdium Rd, Phase 5"
            android:layout_toStartOf="@+id/textView12"
            android:textColor="@color/grey"
            android:textSize="@dimen/_9sdp" />

        <TextView
            android:id="@+id/textView12"
            style="@style/semibold_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:drawableStart="@drawable/ic_withdrawer_arrow"
            android:text="$24.00"
            android:layout_below="@+id/textView10"
            android:layout_alignParentEnd="true"
            android:textColor="@color/quantum_googgreen500"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/medium_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:textSize="@dimen/_9sdp"
           android:layout_alignParentEnd="true"/>

        <View
            android:id="@+id/divider3"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/lightGrey"
            app:layout_constraintBottom_toBottomOf="parent"
android:layout_below="@+id/textView11"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cv_img" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_withdraw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_ref"
            style="@style/medium_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ref. no.abc12345"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/_9sdp" />

        <TextView
            android:id="@+id/tv_date_bank"
            style="@style/medium_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="11::57am, 09-03-2020"
            android:textSize="@dimen/_9sdp" />

        <TextView

            android:id="@+id/tv_wallet_to_bank"
            style="@style/semibold_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_ref"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="@string/wallet_to_bank"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_12sdp" />

        <TextView
            android:id="@+id/account_number"
            style="@style/medium_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_wallet_to_bank"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="xxx xxx x000"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/tv_withdrawer"
            style="@style/semibold_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_wallet_to_bank"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="20.00"
            android:drawableStart="@drawable/ic_up_arrow"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_12sdp" />
        <View
            android:id="@+id/divider4"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_withdrawer"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/lightGrey"/>

    </RelativeLayout>

</RelativeLayout>
