<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10sdp"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_close_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/ic_close" />

        <TextView
            style="@style/semibold_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Add New Category"
            android:textColor="@color/textBlack"
            android:textSize="@dimen/_12sdp" />


    </LinearLayout>


    <EditText
        android:id="@+id/ed_category_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:hint="Enter category name"
        android:inputType="textCapSentences" />

    <TextView
        android:id="@+id/tv_day"
        style="@style/semibold_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rv_parent"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Day"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_day"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/ed_from_dialog"
            style="@style/medium_text"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_bg"
            android:hint="From"
            android:paddingStart="@dimen/_10sdp" />

        <EditText
            android:id="@+id/ed_to_dialog"
            style="@style/medium_text"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_bg"
            android:hint="To"
            android:paddingStart="@dimen/_10sdp" />


    </LinearLayout>

    <TextView
        style="@style/semibold_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_day"
        android:layout_marginTop="@dimen/_15sdp"
        android:text="@string/time" />

    <LinearLayout
        android:id="@+id/ll_time_dialog"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ed_start_dialog"
            style="@style/medium_text"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_30sdp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_bg"
            android:gravity="center_vertical"
            android:hint="Start"

            android:paddingStart="@dimen/_10sdp" />

        <TextView
            android:id="@+id/ed_end_dialog"
            style="@style/medium_text"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_weight="1"
            android:background="@drawable/edit_text_bg"
            android:gravity="center_vertical"
            android:hint="End"
            android:paddingStart="@dimen/_10sdp" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_date"
        style="@style/semibold_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_day"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="@string/date"

        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_time"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/ed_start_date_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:hint="Start" />

        <EditText
            android:id="@+id/ed_end_date_dialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="End" />


    </LinearLayout>

    <TextView
        android:id="@+id/tv_special_day"
        style="@style/semibold_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_day"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Special Day"

        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_special_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/ed_special"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:hint="Start" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_add_dialog"
            style="@style/semibold_text"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_weight="1"
            android:background="@drawable/add_bg"
            android:gravity="center"
            android:text="@string/add"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/dialog_cancel"
            style="@style/semibold_text"
            android:layout_width="0dp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="@dimen/_20sdp"
            android:layout_weight="1"
            android:background="@drawable/cancel_bg"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center"

            android:text="@string/cancel" />
    </LinearLayout>
</LinearLayout>